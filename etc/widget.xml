<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:helloworld:Magento_Widget:etc/widget.xsd">
	<widget class="Lof\HaHelloMagento\Block\Widget\Posts" id="lof_hahelloworldmagento_posts">
		<label>Blog Posts</label>
		<description>Posts</description>
		<parameters>
			<parameter name="posts" sort_order="10" visible="true" xsi:type="text">
				<label>Title</label>
			</parameter>
			<parameter name="content" sort_order="10" visible="true" xsi:type="text">
				<label>Content</label>
			</parameter>
			<parameter name="enable_author" sort_order="10" visible="true" xsi:type="select" source_model="Magento\Config\Model\Config\Source\Yesno">
				<label>Enable/Disable</label>
			</parameter>
			<parameter name="author" sort_order="10" visible="true" xsi:type="text">
				<label>Author</label>
				<depends>
					<parameter name = "enable_author" value = "1"/>
				</depends>
			</parameter>
		</parameters>
	</widget>
</widgets>